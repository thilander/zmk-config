#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/rgb.h>
#include <dt-bindings/zmk/ext_power.h>

#define BASE 0
#define RAISE 1
#define NAV 2

/* Uncomment to enable the encoder */
 &sensors {
     status = "okay";
 };
 &encoder { status = "okay"; };

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp ESC        &kp N1       &kp N2      &kp N3    &kp N4     &kp N5                      &kp N6         &kp N7      &kp N8      &kp N9      &kp N0      &kp MINUS
                &kp TAB        &kp Q        &kp W       &kp E     &kp R      &kp T                       &kp Y          &kp U       &kp I       &kp O       &kp P       &kp EQUAL
                &kp GRAVE      &kp A        &kp S       &kp D     &kp F      &kp G                       &kp H          &kp J       &kp K       &kp L       &kp SEMI    &kp SQT
                &kp LSHFT      &kp Z        &kp X       &kp C     &kp V      &kp B          &kp C_MUTE   &kp N          &kp M       &kp COMMA   &kp DOT     &kp FSLH    &kp RSHIFT
                &kp LCTRL      &kp LALT     &kp LGUI    &mo RAISE &kp LGUI   &kp SPACE                   &kp RET        &kp BSPC    &mo RAISE   &kp LBKT    &kp RBKT    &tog NAV
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        raise_layer {
            bindings = <
                &kp F1       &kp F2         &kp F3         &kp F4         &kp F5   &kp F6             &kp F7   &kp F8      &kp F9     &kp F10     &kp F11   &kp F12
                &bt BT_CLR   &bt BT_SEL 0   &bt BT_SEL 1   &bt BT_SEL 2   &trans   &trans             &trans   &kp HOME    &kp UP     &kp END     &trans    &trans
                &trans       &trans         &trans         &trans         &trans   &trans             &trans   &kp LEFT    &kp DOWN   &kp RIGHT   &trans    &trans
                &trans       &trans         &trans         &trans         &trans   &trans   &trans    &trans   &kp PG_DN   &trans     &kp PG_UP   &trans    &trans
                &trans       &trans         &trans         &trans         &trans   &trans             &trans   &trans      &trans     &trans      &trans    &trans
            >;
        };

        nav_layer {
            bindings = <
                &trans       &trans       &trans       &trans       &trans       &trans                    &trans     &trans     &trans     &trans     &trans  &trans
                &bt BT_CLR   &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4              &trans     &kp PG_DN  &kp UP     &kp PG_UP  &trans  &trans
                &out OUT_TOG &trans       &trans       &trans       &trans       &trans                    &trans     &kp LEFT   &kp DOWN   &kp RIGHT  &trans  &trans
                &trans       &trans       &trans       &trans       &trans       &trans       &trans       &trans     &kp HOME   &trans     &kp END    &trans  &trans
                &trans       &trans       &trans       &trans       &trans       &trans                    &trans     &trans     &trans     &trans     &trans  &trans
            >;
        };
    };
};
